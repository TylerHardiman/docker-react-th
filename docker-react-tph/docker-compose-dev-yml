version: '3.9'

services:

    docker-react-dev:
        container_name: docker_react_dev
        build:
            context: .
            dockerfile: Dockerfile-dev
        volumes:
            - .:/app
            - '/app/node_modules'
        ports:
            - '3002:3000'

    docker-react-test:
        container_name: docker_react_test
        image: docker-react-tph_docker-react-dev #test for testing
        volumes:
            - .:/app
            - '/app/node_modules'
        command: ["npm","run","test",]